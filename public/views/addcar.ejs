<div class="container">
  <div>
    <h2 class='addcarheader'>Add Car to Inventory</h2>
    <h4 class='addinstructions'>Please input the information below as accurately as possible.</h4>
  </div>
  <div class='well'>
    <form method="post">
      <div class="row">
        <div class='col-sm-6'>
          <input placeholder="Make/Model of Car" class="form-control">
          <input placeholder="Year" class="form-control">
          <input placeholder="Condition" class="form-control">
        </div>
        <div class='col-sm-6'>
          <input placeholder="Color" class="form-control">
          <input placeholder="image url" class='form-control'>
          <button type="submit" class="btn btn-primary">Add Car Listing</button>
        </div>
      </div>
    </form>
  </div>
</div>
